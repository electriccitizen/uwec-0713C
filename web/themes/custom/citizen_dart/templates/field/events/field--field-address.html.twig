{% extends 'field.html.twig' %}

{% block fieldSingleNo %}
	{%- if item.content.address_line1['#value'] -%}
	  {%- if item.content.organization['#value'] -%}
	    <div class="organization">{{ item.content.organization['#value'] }}</div>
	  {%- endif -%}
	  <div class="address-wrapper">
		  {%- if item.content.address_line1['#value'] -%}
		    {{ item.content.address_line1['#value'] }}
		  {%- endif -%}
		  {%- if item.content.address_line2['#value'] -%}
		    , {{ item.content.address_line2['#value'] }}
		  {%- endif -%}
		  {%- if item.content.dependent_locality.code['#value'] -%}
		    , {{ item.content.dependent_locality.code['#value'] }}
		  {%- endif -%}
		  {%- if item.content.locality['#value'] or item.content.postal_code['#value'] or item.content.administrative_area['#value'] -%}
		    {% if item.content.locality['#value'] %}, {% endif %}{{ item.content.locality['#value'] }}{% if item.content.administrative_area['#value'] %}, {% endif %}{{ item.content.administrative_area['#value'] }} {{ item.content.postal_code['#value'] }} 
		  {%- endif -%}
		</div>
	{%- endif -%}
{% endblock %}

