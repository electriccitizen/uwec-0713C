{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% set classes = [
	'media-item',
	media.bundle.0.target_id|clean_class,
	view_mode|clean_class
] %}

<article{{ attributes|without('data-quickedit-entity-id').addClass(classes) }} data-quickedit-entity-id="media/{{ media.mid.0.value }}">
  {{ title_suffix.contextual_links }}
  {% if content %}
    {{ content }}
  {% endif %}
</article>
