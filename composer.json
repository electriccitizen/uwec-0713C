{
  "name": "pantheon-upstreams\/drupal-project",
  "description": "Install Drupal 9 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https:\/\/packages.drupal.org\/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    },
    {
      "type": "path",
      "url": "upstream-configuration"
    }
  ],
  "require": {
    "bower-asset/lazysizes": "^5.1",
    "composer/installers": "^1.9",
    "cweagans/composer-patches": "^1.7",
    "drupal/addanother": "^1.0",
    "drupal/address": "^1.9",
    "drupal/admin_toolbar": "^3.0",
    "drupal/allowed_formats": "^2.0",
    "drupal/antibot": "^2.0",
    "drupal/auto_entitylabel": "^3.0@beta",
    "drupal/block_content_permissions": "^1.11",
    "drupal/config_filter": "^2.0",
    "drupal/config_ignore": "^2.2",
    "drupal/config_split": "^2.0",
    "drupal/core-composer-scaffold": "10.0.*",
    "drupal/core-project-message": "10.0.*",
    "drupal/core-recommended": "10.0.*",
    "drupal/crop": "^2.1",
    "drupal/ctools": "^4.0",
    "drupal/default_content": "^2.0",
    "drupal/devel": "^5.0",
    "drupal/drupal-extension": "^5.0@RC",
    "drupal/embed": "^1.6",
    "drupal/entity": "^1.1",
    "drupal/entity_reference_revisions": "^1.8",
    "drupal/entity_usage": "^2.0@beta",
    "drupal/extlink": "^1.5",
    "drupal/field_group": "^3.1",
    "drupal/focal_point": "^2.0",
    "drupal/geolocation": "^3.2.0",
    "drupal/gin": "^3.0@beta",
    "drupal/gin_toolbar": "^1.0@beta",
    "drupal/hreflang": "^1.3",
    "drupal/image_style_quality": "^1.4",
    "drupal/jquery_ui_draggable": "^2.0",
    "drupal/layout_builder_restrictions": "^2.7",
    "drupal/layout_paragraphs": "^2.0",
    "drupal/lazy": "3.x-dev@dev",
    "drupal/linkit": "^6.0@beta",
    "drupal/masquerade": "^2.0@RC",
    "drupal/media_entity_file_replace": "^1.0",
    "drupal/menu_admin_per_menu": "^1.5",
    "drupal/menu_block": "^1.6",
    "drupal/menu_breadcrumb": "^2.0",
    "drupal/metatag": "^1.14",
    "drupal/paragraphs": "^1.12",
    "drupal/pathauto": "^1.8",
    "drupal/pathologic": "^2.0",
    "drupal/quicklink": "^2.0",
    "drupal/redirect": "^1.6",
    "drupal/responsive_preview": "^2.0",
    "drupal/role_delegation": "^1.1",
    "drupal/search_api": "^1.18",
    "drupal/smart_date": "^4.0",
    "drupal/stable": "^2.0",
    "drupal/stage_file_proxy": "^2.0",
    "drupal/superfish": "1.x-dev@dev",
    "drupal/token": "^1.7",
    "drupal/twig_tweak": "^3.1",
    "drupal/views_bulk_operations": "^4.0",
    "drupal/views_infinite_scroll": "^2.0",
    "drupal/webform": "^6.2",
    "drupal/xmlsitemap": "^1.0",
    "drush-ops/behat-drush-endpoint": "^9.4",
    "drush/drush": "^11",
    "mglaman/composer-drupal-lenient": "^1.0",
    "oomphinc/composer-installers-extender": "^2.0",
    "pantheon-upstreams/upstream-configuration": "*"
  },
  "conflict": {
    "drupal\/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-types": ["bower-asset", "npm-asset"],
    "installer-paths": {
      "web\/core": [
        "type:drupal-core"
      ],
      "web\/libraries\/{$name}": [
        "type:drupal-library", "type:bower-asset", "type:npm-asset"
      ],
      "web\/modules\/composer\/{$name}": [
        "type:drupal-module"
      ],
      "web\/profiles\/composer\/{$name}": [
        "type:drupal-profile"
      ],
      "web\/themes\/composer\/{$name}": [
        "type:drupal-theme"
      ],
      "drush\/Commands\/contrib\/{$name}": [
        "type:drupal-drush"
      ],
      "web\/private\/scripts\/quicksilver\/{$name}\/": [
        "type:quicksilver-script"
      ]
    },
    "patches": {
      "drupal/core": {
      	"Media library won't allow media in two fields with the same name on nodes": "https://www.drupal.org/files/issues/2023-02-28/3345064.patch",
        "Update module can get 'stuck' with 'no releases available', https://www.drupal.org/project/drupal/issues/2920285": "https://www.drupal.org/files/issues/2920285-update-status.patch"
      },
      "drupal/block_content_permissions": {
        "Allow custom block library access without administering blocks": "https://www.drupal.org/files/issues/2023-01-09/block_content_permissions-access_listing_page-2920739-59.patch"
      },
      "drupal/focal_point": {
        "Preview modal closes media library": "https://www.drupal.org/files/issues/2020-10-06/3162210-17.patch",
        "Require jquery_ui_draggable": "https://www.drupal.org/files/issues/2023-04-03/3351521-2.patch"
      },
      "drupal/token": {
        "Responsive Preview Integration": "https://www.drupal.org/files/issues/2021-08-13/responsive_preview_support_3218969-6.patch"
      },
      "drupal/superfish": {
      	"D10 compatibility patch": "https://www.drupal.org/files/issues/2023-01-18/3299991-drupal-10-compatibility-fixes-7.patch"
      }
    },
    "composer-exit-on-patch-failure": true,
    "patchLevel": {
      "drupal\/core": "-p2"
    },
    "drupal-scaffold": {
      "allowed-packages": [
        "pantheon-systems\/drupal-integrations"
      ],
      "locations": {
        "web-root": ".\/web"
      },
      "file-mapping": {
        "[project-root]\/.editorconfig": false,
        "[project-root]\/pantheon.upstream.yml": false,
        "[project-root]\/.gitattributes": false
      }
    },
    "build-env": {
      "export-configuration": "drush config-export --yes",
      "install-cms": [
        "drush site-install citizen --account-mail=no-reply@electriccitien.com --account-name=admin  --site-mail=no-reply@electriccitizen.com --site-name=ec-upstream --yes"
      ]
    },
    "drupal-lenient": {
      "allowed-list": ["drupal/superfish"]
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "drupal/core-composer-scaffold": true,
      "cweagans/composer-patches": true,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupal/core-project-message": true,
      "oomphinc/composer-installers-extender": true,
      "mglaman/composer-drupal-lenient": true,
      "zaporylie/composer-drupal-optimizations": true
    }
  },
  "scripts": {
    "unit-test": "echo 'No unit test step defined.'",
    "lint": "find web\/modules\/custom web\/themes\/custom -name '*.php' -exec php -l {} \\;",
    "code-sniff": [
      ".\/vendor\/bin\/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor .\/web\/modules\/custom",
      ".\/vendor\/bin\/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor .\/web\/themes\/custom",
      ".\/vendor\/bin\/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor .\/web\/modules\/custom",
      ".\/vendor\/bin\/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor .\/web\/themes\/custom"
    ]
  },
  "require-dev": {
    "behat/behat": "^3.9",
    "behat/mink": "^1.9",
    "behat/mink-extension": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "dmore/behat-chrome-extension": "^1.3",
    "drupal/coder": "^8.3",
    "drupal/drupal-driver": "^2.1",
    "genesis/behat-fail-aid": "^3.7",
    "mikey179/vfsstream": "^1.6",
    "palantirnet/drupal-rector": "^0.13.1",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/css-selector": "^5.3",
    "symfony/phpunit-bridge": "^6.1"
  }
}
